<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Real Time Web</title>
  <link rel="stylesheet" href="/styles/styles.css">
  <script src="/script/script.js" defer></script>

</head>
<body>
    <header>

    </header>
    
  <main>
    <body>
        <h1>Angrezi</h1>
        <main>

          <!-- section om mijn tijd te laten zien -->
          <section>
            <p id="time"></p>
          </section>

          <!-- section voor mijn username en de join chat button -->
          <section>
            <form>
              <input type="text" id="username-input" placeholder="Enter your username">
              <button class="create-user-btn">Join chat</button>
            </form>
            <div class="popup">
              <p>This chat is English only.</p>
              <p>We do not tolerate profanity words!!</p>
            </div>
          </section>
          
          <!-- section voor mijn chat app -->
          <section>
            <button class="back-btn">go back</button>
            <ul></ul>
            <form class="message-input">
              <input type="text" id="message-input" autocomplete="off" placeholder="Type your message..">
              <button type="submit" id="message-button"><span>Send</span></button>
            </form>
            <p id="error"></p>
          </section>

          
        </main>
    
      
        <script src="/socket.io/socket.io.js"></script>
     
  

</body>
</html>